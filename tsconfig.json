{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "bundler",
    "module": "esnext",
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "types": ["svelte", "node"],
    "baseUrl": ".",
    "paths": {
      "$lib/*": ["src/lib/*"],
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*.d.ts", "src/**/*.ts", "src/**/*.svelte", "vite.config.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
